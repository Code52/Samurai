<?xml version="1.0" encoding="utf-8" ?>
<Window Size="100%">
  <Image src="Textures\samurai_background_notext.png" Size="100%" />
  
  <TextBlock Position="15%" Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Enter the Game Name:" />

  <TextBlock Position="20%, 30%" Name="txtGameName" Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Tap Here" />

  <TextBlock Align="Center" VAlign="Middle" Name="creatingMessage" Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Creating Game..." Visibility="Enabled" />

  <Button Position="15%, 80%" Name="btnCreate" Text="Create Game">
    <TextBlock Font="MenuFont.spritefont" Color="#000000" Format="{parenttext}" />
  </Button>
</Window>
